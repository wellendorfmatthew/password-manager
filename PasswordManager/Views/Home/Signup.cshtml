@{
    ViewData["Title"] = "Sign Up";
}

<div class="w-screen h-screen flex items-center justify-center flex-col gap-10 mb-52">
    <h2 class="text-2xl text-black font-semibold">Sign Up</h2>
    <div class="w-1/2 h-[500px] border-black border flex items-center justify-center flex-col gap-4">
        <div class="flex-col flex items-center gap-2 w-[270px] mb-8">
            <label class="text-2xl font-semibold" for="name">
                Username
            </label>
            <input type="text" name="name" value="" class="border-black border w-full h-12" />
        </div>
        <div class="flex-col flex items-center gap-2 w-[270px] mb-8">
            <label class="text-2xl font-semibold" for="password">
                Password
            </label>
            <input type="password" name="password" value="" class="border-black border w-full h-12" />
        </div>
        <button class="bg-black text-white text-2xl w-[135px] h-12">Sign Up</button>
        <p class="text-base">Already have an account?<a class="text-cyan-400 ml-1" asp-controller="Home" asp-action="Signin">Sign in here</a></p>
    </div>
</div>
